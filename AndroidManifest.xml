<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lights_out"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.lights_out.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.lights_out.Game"
            android:label="@string/title_activity_game"
            android:parentActivityName="com.example.lights_out" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lights_out" />
        </activity>
        <activity
            android:name="com.example.lights_out.Options"
            android:label="@string/title_activity_options"
            android:parentActivityName="com.example.lights_out" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lights_out" />
        </activity>
        <activity
            android:name="com.example.lights_out.Game5x5"
            android:label="@string/title_activity_game5x5"
            android:parentActivityName="com.example.lights_out" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lights_out" />
        </activity>
        <activity
            android:name="com.example.lights_out.Game7x7"
            android:label="@string/title_activity_game7x7"
            android:parentActivityName="com.example.lights_out" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lights_out" />
        </activity>
    </application>

</manifest>